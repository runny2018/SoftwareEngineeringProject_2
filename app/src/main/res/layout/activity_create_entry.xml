<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEntryActivity"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/edittext_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Maintenance date"
        android:layout_below="@id/edittext_name"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/edittext_composition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Composition"
        android:layout_below="@id/edittext_date"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/save_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittext_composition"
        android:layout_marginTop="10dp"/>

</RelativeLayout>